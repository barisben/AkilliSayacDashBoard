@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Two-factor authentication (2FA) kurtarma kodu üret";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Bu kodları mutlaka saklayın!</strong>
    </p>
    <p>
        Authenticator kurulu cihazınızı kaybederseniz ve kurtarma kodlarınız yoksa hesabınıza giriş yapamazsınız.
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">Kurtarma Kodlarını Üret</button>
    </form>
</div>
